<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:contentPadding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@id/item_posicion_n"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:gravity="center"
            android:paddingRight="5dp"
            android:shadowColor="@color/sombra"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="N"
            android:textSize="14sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@id/item_posicion_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:shadowColor="@color/sombra"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="{fa-user} Nombre"
            android:textSize="14sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@id/item_posicion_puntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:shadowColor="@color/sombra"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="Puntos"
            android:textSize="14sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@id/item_posicion_acertados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:shadowColor="@color/sombra"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="P.\nAcertados"
            android:textSize="14sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@id/item_posicion_totales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:shadowColor="@color/sombra"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="P.\nTotales"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>